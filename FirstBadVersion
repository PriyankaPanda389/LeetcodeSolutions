# brute force approach
#take each element and run the api given on each element and if the api returns true, return the corresponding index
class Solution:
    def firstBadVersion(self, n: int) -> int:
        for i in range(n+1):
            if isBadVersion(i):
                return i
                
 #a better approach with O(logn) complexity using binary search
 class Solution:
    def firstBadVersion(self, n: int) -> int:
        left=0
        right=n
        while(left<=right):
            mid=(left + right)//2
            if isBadVersion(mid):
                #if this condition in if, ends up to be true, then search the left half
                right=mid-1
            else:
                left=mid+1
        #return the first bad version
        return left
                
